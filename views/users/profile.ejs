<% layout("layouts/boilerplate") %>
    <style>
        .row {
            margin-top: 50px;
            text-align: center;
        }
        .row p {
            border: 3px solid black;
            border-radius: 10px;
            padding: 5px;
            height: 50px;
            text-align: center;
            color: red;
            font-weight: 900;
        }
    </style>

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
